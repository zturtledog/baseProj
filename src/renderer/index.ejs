<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>electron-starter-template</title>
    <% if (htmlWebpackPlugin.options.nodeModules) { %>
    <script>
      require('module').globalPaths.push(
        `<%= htmlWebpackPlugin.options.nodeModules.replace(/\\/g, '\\\\') %>`
      )
    </script>
    <% } %>
  </head>

  <body>
    <div>
      <section class="hero is-info">
        <div class="hero-body">
          <div class="container">
            <h1 class="title">Electron Starter Template</h1>
            <h2 class="subtitle">@mubaidr</h2>
          </div>
        </div>
      </section>
    </div>

    <!-- Set `__static` path to static files in production -->
    <script>
      if (process.env.NODE_ENV !== 'development')
        window.__static = require('path')
          .join(__dirname, '/static')
          .replace(/\\/g, '\\\\')
    </script>
    <!-- webpack builds are automatically injected -->
  </body>
</html>
